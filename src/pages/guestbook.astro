---
import Layout from "@layouts/Layout.astro";
import Comments from "@components/comments/Comments.astro";
---

<Layout title="留言板" description="在这里留下你的足迹，分享你的想法。">
    <div class="animate-fade-in">
        <header class="mb-8 text-center">
            <h1
                class="text-4xl font-bold flex items-center justify-center gap-3"
            >
                <i class="ri-message-3-line text-primary"></i>
                <span>留言板</span>
            </h1>
            <p class="text-base-content/70 mt-2 text-lg">
                一些随意的想法，一些无声的问候。
            </p>
        </header>

        <div id="guestbook-container">
            <Comments
                identifier="guestbook"
                commentType="blog"
                displayMode="guestbook"
            />
        </div>
    </div>
</Layout>
